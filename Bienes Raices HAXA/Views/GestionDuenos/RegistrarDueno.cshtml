@model Bienes_Raices_HAXA.Models.Usuario
<!DOCTYPE html>
<html>
<head>
    @{ ViewBag.Title = "Registro Dueño"; }
    @Styles.Render("~/Content/RegistroUsuario.css")
</head>
<body>
    <br />
    <div class="login-block">

        @using (Html.BeginForm("Registrar", "GestionDuenos", FormMethod.Post))
        {
        <div class="signin">
            <h2 class="form-signin-heading">Registrar Dueño</h2>
            <div class="central">
                <div class="caja1">
                    <div class="form-group">
                        @Html.Label("Identificacion/Cedula:")
                        @Html.TextBoxFor(d => d.cedula_identificacion, "", new { @class = "form-control", required = "required" })
                        <br />
                        @Html.Label("Nombre:")
                        @Html.TextBoxFor(d => d.nombre, "", new { @class = "form-control", required = "required" })
                        <br />
                        @Html.Label("Segundo apellido:")
                        @Html.TextBoxFor(d => d.apellido2, "", new { @class = "form-control", required = "required" })
                        <br />
                        @Html.Label("E-Mail:")
                        @Html.TextBoxFor(d => d.email, "", new { @class = "form-control", required = "required" })
                    </div>
                </div>
                <div class="caja2">
                    <div class="form-group">
                        <br />
                        <br />
                        <br />
                        <br />
                        @Html.Label("Primer apellido:")
                        @Html.TextBoxFor(d => d.apellido1, "", new { @class = "form-control", required = "required" })
                        <br />
                        @Html.Label("Telefono:")
                        @Html.TextBoxFor(d => d.telefono, "", new { @class = "form-control", required = "required" })
                        <br />
                        @Html.Label("Contraseña:")
                        @Html.TextBoxFor(d => d.password, "", new { @class = "form-control", @type = "password", required = "required" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <br />
                <button value="Registrarse" class="button" type="submit">Registrarse</button>
            </div>
        </div>}
    </div>
</body>
</html>