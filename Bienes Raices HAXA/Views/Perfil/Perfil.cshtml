@model Bienes_Raices_HAXA.Models.Usuario
<!DOCTYPE html>
<html>
<head>
    @{ ViewBag.Title = "Perfil"; }
    @Styles.Render("~/Content/Perfil.css")
</head>
<body>
    <br />
    <div class="login-block">

        <div class="signin">
            <h2 class="form-signin-heading">Datos de personales</h2>
                <div class="central">
                    <div class="caja1">
                        <div class="form-group">
                            @Html.TextBoxFor(d => d.idUsuario, new { @hidden = true })
                            @Html.TextBoxFor(d => d.idRol, new { @hidden = true })
                            @Html.Label("Cedula:")
                            @Html.TextBoxFor(d => d.cedula_identificacion, "", new { @class = "form-control", required = "required", @type = "number", })
                            <br />
                            @Html.Label("Nombre:")
                            @Html.TextBoxFor(d => d.nombre, "", new { @class = "form-control", required = "required" })
                            <br />
                            @Html.Label("Segundo apellido:")
                            @Html.TextBoxFor(d => d.apellido2, "", new { @class = "form-control", required = "required" })
                            <br />
                            @Html.Label("Correo:")
                            @Html.TextBoxFor(d => d.email, "", new { @class = "form-control", required = "required", @type = "email" })
                        </div>
                    </div>
                    <div class="caja2">
                        <div class="form-group">

                            @Html.Label("Primer apellido:")
                            @Html.TextBoxFor(d => d.apellido1, "", new { @class = "form-control", required = "required" })
                            <br />
                            @Html.Label("Teléfono:")
                            @Html.TextBoxFor(d => d.telefono, "", new { @class = "form-control", required = "required" })
                            <br />
                            @Html.Label("Contraseña:")
                            @Html.TextBoxFor(d => d.password, "", new { @class = "form-control", @type = "password", required = "required" })

                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <br />
                    <button value="editarCampo" id="editar" style="width:200px" onclick="editarPerfil();" class="button" type="submit">Editar campos</button>
                </div>
