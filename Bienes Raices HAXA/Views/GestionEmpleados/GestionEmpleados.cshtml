@model IEnumerable<Bienes_Raices_HAXA.Models.Usuario>
@{
    ViewBag.Title = "GestionEmpleados";
}

@Styles.Render("~/Content/Format.css")

<h2>Gestion de Empleados</h2>

<table class="table">
    <thead>
    <th>ID</th>
    <th>Cedula</th>
    <th>Nombre</th>
    <th>Primer Apellido</th>
    <th>Segundo Apellido</th>
    <th>Correo</th>
    <th>Contraseña</th>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.idUsuario</td>
            <td>@item.cedula_identificacion</td>
            <td>@item.nombre</td>
            <td>@item.apellido1 </td>
            <td>@item.apellido2</td>
            <td>@item.email</td>
            <td>@item.password</td>
            <td>@Html.ActionLink("Actualizar", "ActualizarEmpleado", new { identificacion = @item.cedula_identificacion})</td>
            <td>@Html.ActionLink("Eliminar", "EliminarEmpleado", new { identificacion = @item.cedula_identificacion })</td>
        </tr>

        }
    </tbody>
</table>