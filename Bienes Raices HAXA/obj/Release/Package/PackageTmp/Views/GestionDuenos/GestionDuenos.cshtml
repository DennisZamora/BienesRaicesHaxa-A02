@model IEnumerable<Bienes_Raices_HAXA.Models.Usuario>
@{
    ViewBag.Title = "GestionDueños";
}

@Styles.Render("~/Content/Format.css")

<h2>Gestion Dueños</h2>

<a href="@Url.Action("RegistrarDueno","GestionDuenos")" class="w3-bar-item w3-button">Registrar un nuevo dueño</a>

<table class="table">
    <thead>
    <th>ID</th>
    <th>Cedula</th>
    <th>Nombre</th>
    <th>Primer Apellido</th>
    <th>Segundo Apellido</th>
    <th>Telefono</th>
    <th>Correo</th>
    <th>Contraseña</th>
    </thead>

    <tbody id="BusquedaDatos">
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.idUsuario</td>
            <td>@item.cedula_identificacion</td>
            <td>@item.nombre</td>
            <td>@item.apellido1 </td>
            <td>@item.apellido2</td>
            <td>@item.telefono</td>
            <td>@item.email</td>
            <td>@item.password</td>
            <td>@Html.ActionLink("Actualizar", "ActualizarDueno", new { identificacion = @item.cedula_identificacion })</td>
            <td>@Html.ActionLink("Eliminar", "EliminarDueno", new { identificacion = @item.cedula_identificacion })</td>
        </tr>

        }
    </tbody>
</table>