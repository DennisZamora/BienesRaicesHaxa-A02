</div>
<div class="form-group">
    @Html.Label("Hora", new { @class = "control-label" })
    <select name="hora" id="hora">
        <option value="8">8:00 am</option>
        <option value="10">10:00 am</option>
        <option value="13">1:00 pm</option>
        <option value="15">3:00 pm</option>
    </select>
</div>

<input type="button" onclick="CalcularFechaFinal();" value="Consultar">
<div class="form-group">
    @Html.Label("Fecha final", new { @class = "control-label" })
    @Html.EditorFor(x => x.fechaFinal, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
    @Html.ValidationMessageFor(x => x.fechaFinal)
</div>

<div class="form-group">
    <br>
    <input type="submit" value="Agregar cita" onclick="validarDatos();" class="btn btn-primary" />
</div>

}

